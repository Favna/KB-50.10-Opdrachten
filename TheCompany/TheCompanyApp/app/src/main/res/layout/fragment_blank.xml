<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyFragment">
    //TODO: Fix layout so it stretches properly when dealing with large amounts of text or screen sizes
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_company_title"
            android:id="@+id/naamText"
            android:layout_marginBottom="66dp"
            android:layout_above="@+id/historyText"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_company_history"
            android:id="@+id/historyText"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="92dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_company_website"
            android:id="@+id/textView3"
            android:layout_above="@+id/btn_back"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="122dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:id="@+id/btn_back"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:layout_marginBottom="38dp"/>
            <!--android:onClick = "back"-->


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forward"
            android:id="@+id/btn_forward"
            android:layout_alignBottom="@+id/btn_back"
            android:layout_toRightOf="@+id/naamText"
            android:layout_toEndOf="@+id/naamText"            />
            <!--android:onClick="forward"-->

    </RelativeLayout>

</FrameLayout>
